<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="南京你选择哪所大学？"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"/>

    <CheckBox
        android:id="@+id/cbk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="南京大学"
        android:textSize="18sp"
        android:layout_below="@id/tv_title"/>

    <CheckBox
        android:id="@+id/checkbox_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="东南大学"
        android:textSize="18sp"
        android:layout_below="@id/cbk1"/>

    <CheckBox
        android:id="@+id/checkbox_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="南京理工大学"
        android:textSize="18sp"
        android:layout_below="@id/checkbox_2"/>

    <CheckBox
        android:id="@+id/checkbox_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="河海大学"
        android:textSize="18sp"
        android:layout_below="@id/checkbox_3"/>

    <CheckBox
        android:id="@+id/checkbox_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="南京邮电大学"
        android:textSize="18sp"
        android:layout_below="@id/checkbox_4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/checkbox_5"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你感兴趣的是？"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_marginBottom="10dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电子信息工程"
            android:button="@drawable/bg_checkbox"
            android:paddingLeft="5dp"
            android:textSize="20sp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电子科学与技术"
            android:button="@drawable/bg_checkbox"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通信工程"
            android:button="@drawable/bg_checkbox"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>>

</RelativeLayout>
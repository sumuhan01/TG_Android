<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_tiange_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TianGeView"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_test_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TestView"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_mingri_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MingRiView"
            android:textAllCaps="false"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="联系人"
            android:textAllCaps="false"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_get_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手机短信"
            android:textAllCaps="false"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_local_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="本地音乐"
            android:textAllCaps="false"
            android:textSize="18sp"/>

    </LinearLayout>>

</ScrollView>